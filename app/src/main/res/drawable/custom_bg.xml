<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- This item creates the top border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- White background for the whole shape -->
            <stroke
                android:width="2dp"
                android:color="#BDBDBD" /> <!-- Grey color for the border -->
            <padding android:top="2dp" /> <!-- Top padding equals to the stroke width -->
        </shape>
    </item>

    <!-- This item overlays the white part to cover the other three sides' border -->
    <item android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
</layer-list>
